@page
@using Dsd601CarpetCalcAsp.Operations;
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}






<div class="card" style=" margin-top: 20px">
    <div class="card-header">
        <h1>Carpet Cost Calculator</h1>
    </div>
    <div class="card-body">
        <h4>Enter Room Details</h4>

        <form method="post">
            <div class="form-group">

                <div class="row g-3">
                    <div class="col">
                        <h6>Enter the Room Width</h6>
                        <input asp-for="@Model.carpet.RoomWidth" type="number" class="form-control w-50">
                    </div>
                    <div class="col">
                        <h6>Enter the Room Length</h6>
                        <input asp-for="@Model.carpet.RoomLength" type="number" class="form-control w-50">
                    </div>

                    <div class="col">
                        <h6>Enter the Carpet Type</h6></br>
                        <select asp-for="@Model.carpet.CarpetType" asp-items="@Html.GetEnumSelectList<CarpetTypeEnum>()">
                            <option selected="selected" value="">Select</option>
                        </select>
                    </div>
                </div>
                <h4>Choose Installation Details</h4>
                <div class="form-check">
                    <input class="form-check-input" asp-for="@Model.carpet.HasInstallation">
                    <label class="form-check-label">Do you want us to install the Carpet?</label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" asp-for="@Model.carpet.HasUnderlay">
                    <label class="form-check-label">Do you want Underlay for your Carpet?</label>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Submit Your Carpet Details</button>

        </form>
    </div>
    <div class="card-footer border border-success rounded">

        <h4>Results</h4>

        <div class="row g-2">
            <div class="col">
                <h6>Room Area @Model.carpet.RoomArea sqm</h6>

            </div>
            <div class="col">
                <h6>Final Cost $@Model.carpet.FinalCost</h6>

            </div>
        </div>
    </div>
</div>
